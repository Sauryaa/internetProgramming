{% extends "world.jinja" %}

{% block searchform %}

<form class="field has-addons" action="{{ url_for('main.region') }}" method="get">
    <div class="control">
        <div class="select">
            <select id="selRegion" name="name" required>
                <option value="" disabled {% if not selected_region %}selected{% endif %}>Search for a region</option>
                {% for region in region_options %}
                <option value="{{ region }}" {% if region == selected_region %}selected{% endif %}>{{ region }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="control">
        <button class="button is-link" id="btnInfo" type="submit">Show data</button>
    </div>
</form>

{% endblock searchform %}
